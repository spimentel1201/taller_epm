<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title">Pagos</h4>
                    <a href="/recordPayment"><button type="button" class="btn btn-primary">Registrar Pago</button></a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table tablesorter " id="payments">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        Código de Guía
                                    </th>
                                    <th>
                                        Nombre Completo
                                    </th>
                                    <th>
                                        Artefacto
                                    </th>
                                    <th>
                                        Monto Total
                                    </th>
                                    <th>
                                        A cuenta
                                    </th>
                                    <th>
                                        Saldo
                                    </th>
                                    <th>
                                        Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% pagos.forEach((pago) => { %>
                                    <tr>
                                        <td>
                                            <%= pago.codigo_guia %>
                                        </td>
                                        <td>
                                            <%= pago.codigo_guia %>
                                        </td>
                                        <td>
                                            <%= pago.codigo_guia %>
                                        </td>
                                        <td>
                                            <%= pago.monto_total %>
                                        </td>
                                        <td>
                                            <%= pago.a_cuenta %>
                                        </td>
                                        <td>
                                            <%= pago.monto_total - pago.a_cuenta %>
                                        </td>
                                        <td>
                                            <a type="button" href="/showBudget/<%= pago._id %>"><i class="fas fa-eye"></i></a>
                                            <a type="button" href="/editBudget/<%= pago._id %>"><i class="far fa-edit"></i></a>
                                            <a type="button" href="/editBudget/<%= pago._id %>"><i class="fas fa-money-bill"></i></a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>