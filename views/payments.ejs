<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title">Pagos</h4>
                    <a href="/recordPayment"><button type="button" class="btn btn-primary">Registrar Pago</button></a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table tablesorter " id="payments">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        Código de Guía
                                    </th>
                                    <th>
                                        Nombre Completo
                                    </th>
                                    <th>
                                        Artefacto
                                    </th>
                                    <th>
                                        Monto Total
                                    </th>
                                    <th>
                                        A cuenta
                                    </th>
                                    <th>
                                        Saldo
                                    </th>
                                    <th>
                                        Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% pagos.forEach((pago) => { %>
                                    <tr>
                                        <td>
                                            <%= pago.codigo_guia %>
                                        </td>
                                        <td>
                                            <%= pago.codigo_guia %>
                                        </td>
                                        <td>
                                            <%= pago.codigo_guia %>
                                        </td>
                                        <td>
                                            <%= pago.monto_total %>
                                        </td>
                                        <td>
                                            <%= pago.a_cuenta %>
                                        </td>
                                        <td>
                                            <%= pago.monto_total - pago.a_cuenta %>
                                        </td>
                                        <td>
                                            <a type="button" data-toggle="modal" data-target="#modal<%= pago._id %>Pago" data-bs-toggle="tooltip" title="Ver" aria-hidden="true"><i class="fas fa-eye"></i></a>
                                            <!--Modal Editar Guia-->
                                            <div class="modal fade" id="modal<%= pago._id %>Pago" tabindex="-1" aria-labelledby="modalPago" aria-hidden="true">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header bg-primary text-white">
                                                            <h3 class="modal-title" id="exampleModalLabel">Pago</h3>
                                                            <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form action="/editar" method="POST">
                                                                <div class="row">
                                                                    <div class="col-sm-2 pr-sm-1">
                                                                        <div class="form-group">
                                                                            <label>Codigo Guia</label>
                                                                            <input type="text" class="form-control" placeholder="5515" value="<%= pago.codigo_guia%>" disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-2 pr-sm-1">
                                                                        <div class="form-group">
                                                                            <label>Nombre Completo</label>
                                                                            <input type="text" class="form-control" placeholder="5515" value="<%= pago.codigo_guia%>" disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-2 pr-sm-1">
                                                                        <div class="form-group">
                                                                            <label>Artefacto</label>
                                                                            <input type="text" class="form-control" placeholder="5515" value="<%= pago.codigo_guia%>" disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-2 pr-sm-1">
                                                                        <div class="form-group">
                                                                            <label>Monto Total</label>
                                                                            <input type="text" class="form-control" value="<%= pago.monto_total%>" disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-2 pr-sm-1">
                                                                        <div class="form-group">
                                                                            <label>A cuenta</label>
                                                                            <input type="text" class="form-control" value="<%= pago.a_cuenta %>" disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-2 pl-sm-1">
                                                                        <div class="form-group">
                                                                            <label>Saldo</label>
                                                                            <input type="text" class="form-control" value="<%= pago.monto_total - pago.a_cuenta %>" disabled>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-primary">Actualizar Pago</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--Fin Modal Actualizar Pago-->
                                            <a type="button" href="/editBudget/<%= pago._id %>"><i class="far fa-edit"></i></a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>